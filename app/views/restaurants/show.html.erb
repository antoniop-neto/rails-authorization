<p><%= link_to "<< Restaurants", restaurants_path, style: "text-decoration: none;" %></p>
<h1><%= @restaurant.name %></h1>
<p><strong>Added by:</strong> <%= @restaurant.user.email %></p>

<% if policy(@restaurant).edit? %>
  <p><%= link_to "(Edit)", edit_restaurant_path(@restaurant), style: "text-decoration: none" %></p>
<% end %>
<ul style="list-style-type: none;">
  <% if policy(@restaurant).destroy? %>
    <li><%= link_to "Delete",
          restaurant_path(@restaurant),
          data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}  %></li>
  <% end %>
</ul>
